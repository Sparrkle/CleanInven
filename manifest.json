{
    "manifest_version": 3,
    "name": "Clean Inven",
    "version": "1.0.2.1",
    "description": "스트레스 받지 않는 인벤 라이프를 위해",
    "permissions": [
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "*://*.inven.co.kr/*"
        ],
        "js": ["content_script.js"],
        "run_at": "document_start"
      }
    ],
    "action": {
        "default_title" : "추가적인 설정을 관리합니다.",
        "default_icon" : "churuko.png",
        "default_popup" : "popup.html"
    },
    "icons": {
      "16": "churuko.png",
      "32": "churuko.png",
      "48": "churuko.png",
      "128": "churuko.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["*.woff"],
        "matches": ["<all_urls>"]
      }
    ]
}
